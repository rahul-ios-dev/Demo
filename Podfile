# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'backup' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for backup
  
  # image download
  pod 'Kingfisher', '~> 8.0'
  
  # api call
  pod 'Alamofire'
  
  # keyboard
  pod 'IQKeyboardManager'
  
  # for firebase https://firebase.google.com/docs/ios/setup
  # firebase remote
  pod 'FirebaseRemoteConfig'
  
  # firebase authentication
  pod 'FirebaseAuth'
  
  # firebase storage
  # firebase Firestore allows you to store and sync data for your app in real-time.
  # eg.
  # let db = Firestore.firestore()
  # db.collection("users").document("user_id").setData([
  #    "name": "John Doe",
  #    "email": "john@example.com"
  # ])
  # Data type: Documents, collections (structured data).
  pod 'FirebaseFirestore'
  
  # Firebase Storage is built on Google Cloud Storage, providing secure file uploads and downloads.
  # Stores large files (e.g., images, videos).
  # Data type: Binary files (images, videos, etc.).
  # pod 'FirebaseStorage'
  
end
